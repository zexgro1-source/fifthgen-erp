rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // طلب مساعد للتخزين على شركة مستخدم
    function getUserCompanyId() {
      return get(/databases/$(database)/documents/memberships/$(request.auth.uid)).data.companyId;
    }

    // التحقق من أن المستخدم ناشط وعضو عي
    function isActiveMember() {
      let membership = get(/databases/$(database)/documents/memberships/$(request.auth.uid));
      return membership.data.status == 'active';
    }

    // المستخدمون
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
    }

    // عضوية المستخدمبن بالشركات
    match /memberships/{membershipId} {
      allow read: if request.auth.uid == resource.data.uid && isActiveMember();
      allow create: if request.auth.uid == request.resource.data.uid;
    }

    // الشركات
    match /companies/{companyId} {
      allow read: if getUserCompanyId() == companyId && isActiveMember();
      allow write: if false; // لا يمكن تعديل بيانات الشركة مباشرة
    }

    // العملاء
    match /clients/{clientId} {
      allow read: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow create: if request.resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow update: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow delete: if resource.data.companyId == getUserCompanyId() && isActiveMember();
    }

    // المشاريع
    match /projects/{projectId} {
      allow read: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow create: if request.resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow update: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow delete: if resource.data.companyId == getUserCompanyId() && isActiveMember();
    }

    // المهام
    match /tasks/{taskId} {
      allow read: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow create: if request.resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow update: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow delete: if resource.data.companyId == getUserCompanyId() && isActiveMember();
    }

    // الفواتير
    match /invoices/{invoiceId} {
      allow read: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow create: if request.resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow update: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow delete: if resource.data.companyId == getUserCompanyId() && isActiveMember();
    }

    // العرضة المضافة
    match /deliverables/{deliverableId} {
      allow read: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow create: if request.resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow update: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow delete: if resource.data.companyId == getUserCompanyId() && isActiveMember();
    }

    // نشاط النظام
    match /activity/{activityId} {
      allow read: if resource.data.companyId == getUserCompanyId() && isActiveMember();
      allow create: if request.resource.data.companyId == getUserCompanyId() && isActiveMember();
    }
  }
}
